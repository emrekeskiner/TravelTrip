@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Blog Listesi</h2>
<br />
<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Blog</a>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>İşlemler</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td>@x.Tarih.ToString("dd.MM.yyyy")</td>
            <td>
                <a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a>
                <a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Güncelle</a>
                <a href="/Blog/BlogDetay/@x.ID" class="btn btn-success">Detay</a>
            </td>
            
        </tr>
    }
</table>

