@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>İşlemler</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blog.Baslik</td>
            
            <td>
                <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a>
                <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a>
                <a href="/Blog/BlogDetay/@x.Blogid" class="btn btn-success">Detay</a>
            </td>

        </tr>
    }
</table>
